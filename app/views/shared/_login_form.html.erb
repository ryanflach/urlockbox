<div class="well" id="login-form">
  <%= form_for(target, url: path) do |f| %>
    <div class="form-group">
      <%= f.label :email, "E-mail" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :verify_password, "Verify Password" %>
      <%= f.password_field :verify_password, class: "form-control" %>
    </div>

    <%= f.submit button, class: "btn btn-default" %>
  <% end %>
</div>
